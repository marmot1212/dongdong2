<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dongdong.JKsheru">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00aff0"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/sheru_fanhui"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#fff"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="摄入量查询"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#e2e2e2">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="查询结果仅供参考"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:focusableInTouchMode="true"
                android:focusable="false"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="年龄:"
                    android:textSize="14sp"
                    android:gravity="center"/>
                <NumberPicker
                    android:layout_marginRight="10dp"
                    android:id="@+id/numpicker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >
                </NumberPicker>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c2c2c2">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="性别："
                    android:gravity="center"/>
                <RadioGroup
                    android:id="@+id/radiogroups"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:buttonTint="@color/mblue"
                        android:checked="true"
                        android:id="@+id/sex_nan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"/>
                    <RadioButton
                        android:buttonTint="@color/mblue"
                        android:id="@+id/sex_nv"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"/>
                </RadioGroup>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c2c2c2">
            </View>
            <LinearLayout
                android:clickable="true"
                android:id="@+id/grid_show"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="营养素:"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:lines="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c2c2c2">
            </View>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:id="@+id/bt1"
                    android:text="全部"
                    android:background="#e2e2e2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#e2e2e2"
                    android:layout_columnWeight="1"
                    android:id="@+id/bt2"
                    android:text="蛋白质"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#e2e2e2"
                    android:layout_columnWeight="1"
                    android:id="@+id/bt3"
                    android:text="维生素A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_marginLeft="10dp"
                    android:background="#e2e2e2"
                    android:layout_weight="1"
                    android:id="@+id/bt4"
                    android:text="维生素B1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#e2e2e2"
                    android:layout_weight="1"
                    android:id="@+id/bt5"
                    android:text="维生素B2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginRight="10dp"
                    android:background="#e2e2e2"
                    android:layout_weight="1"
                    android:id="@+id/bt6"
                    android:text="维生素C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="#e2e2e2"
                    android:id="@+id/bt7"
                    android:text="维生素D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#e2e2e2"
                    android:layout_weight="1"
                    android:id="@+id/bt8"
                    android:text="维生素E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginRight="10dp"
                    android:background="#e2e2e2"
                    android:layout_weight="1"
                    android:id="@+id/bt9"
                    android:text="钙"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_marginLeft="10dp"
                    android:background="#e2e2e2"
                    android:layout_weight="1"
                    android:id="@+id/bt10"
                    android:text="磷"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#e2e2e2"
                    android:layout_weight="1"
                    android:id="@+id/bt11"
                    android:text="钾"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginRight="10dp"
                    android:background="#e2e2e2"
                    android:layout_weight="1"
                    android:id="@+id/bt12"
                    android:text="纳"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_marginLeft="10dp"
                    android:background="#e2e2e2"
                    android:layout_weight="1"
                    android:id="@+id/bt13"
                    android:text="镁"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#e2e2e2"
                    android:layout_weight="1"
                    android:id="@+id/bt14"
                    android:text="铁"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginRight="10dp"
                    android:background="#e2e2e2"
                    android:layout_weight="1"
                    android:id="@+id/bt15"
                    android:text="锌"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="#e2e2e2"
                    android:id="@+id/bt16"
                    android:text="硒"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/sheru_bt"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="查询"
                android:background="@drawable/button_bg"
                android:textColor="#fff"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
