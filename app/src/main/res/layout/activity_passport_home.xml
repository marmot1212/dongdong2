<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.administrator.vegetarians824.veganpass.PassportHome"
             android:id="@+id/home_rootview"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efeff4"
        android:padding="16dp">
        <FrameLayout
            android:background="#fff"
            android:id="@+id/home_content"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/passport_page">
            </include>
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/home_bartop"
        android:background="#00AFF0"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <LinearLayout
            android:id="@+id/home_setcountry"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:src="@mipmap/location"/>
            <TextView
                android:maxLines="2"
                android:ellipsize="end"
                android:maxWidth="140dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/home_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#fff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="right">
            <TextView
                android:id="@+id/home_fedback"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_gravity="right|bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="反馈"
                android:gravity="center_vertical"
                android:textColor="#fff"/>
            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e0e0e0"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">
            </View>
            <TextView
                android:id="@+id/home_favour"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_gravity="right|bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="设置"
                android:gravity="center_vertical"
                android:textColor="#fff"/>


        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/home_localfailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地理位置获取失败"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/level0"/>
        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/home_op1"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:background="@drawable/button_bg01"
                android:text="重新获取"/>
            <Button
                android:id="@+id/home_op2"
                android:layout_marginLeft="16dp"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:background="@drawable/button_bg01"
                android:text="手动获取"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:visibility="gone"
        android:id="@+id/favour_leader"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/leader_cn"/>
</FrameLayout>
