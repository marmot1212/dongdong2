<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.vegetarians824.homePage.FourthFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:focusable="false"
        android:overScrollMode="never"
        android:scrollbars="none" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#00aff0">
                <LinearLayout
                    android:id="@+id/usercenter_qiandao"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/rililogo"/>
                    <TextView
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="签到"/>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#00aff0"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/my_setting"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="40dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/myoption"/>
                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal">
                        <com.example.administrator.vegetarians824.myView.RoundImageView
                            android:id="@+id/my_pic"
                            android:layout_width="110dp"
                            android:scaleType="centerCrop"
                            android:layout_height="110dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/cc_touxiang"/>
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/avator" />
                    </RelativeLayout>
                    <TextView
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:id="@+id/my_name"
                        android:layout_marginTop="5dp"
                        android:text="用户名"
                        android:textSize="16sp"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/my_edit"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="40dp"
                    android:layout_gravity="bottom|end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/myedit"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_paiming"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="#fff">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人积分"/>
                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/my_duihuan"
                        android:textColor="#f00"
                        android:layout_marginRight="5dp"
                        android:text="兑换"
                        android:gravity="right"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"/>
                </FrameLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:weightSum="100">
                    <View
                        android:layout_weight="10"
                        android:id="@+id/my_jindu22"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                    </View>
                    <TextView
                        android:layout_weight="90"
                        android:id="@+id/my_jifen"
                        android:layout_marginTop="2dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="#00aff0"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <LinearLayout
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:weightSum="100">
                        <View
                            android:background="#c2c2c2"
                            android:layout_weight="60"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </View>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/my_jindusum"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:weightSum="100">
                        <View
                            android:id="@+id/my_jindu"
                            android:background="#00aff0"
                            android:layout_weight="10"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </View>
                    </LinearLayout>
                </FrameLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_weight="60"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60"/>
                    <TextView
                        android:layout_weight="40"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/my_jifenshop"
                android:background="#fff"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分商城"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2">
            </View>
            <LinearLayout
                android:id="@+id/my_jifenrank"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分排行榜"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2">
            </View>


            <!--<LinearLayout-->
                <!--android:id="@+id/my_contribute"-->
                <!--android:background="#fff"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="40dp">-->
                <!--<TextView-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:textSize="16sp"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:text="我的打赏"/>-->
                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/next"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:layout_marginEnd="@dimen/margin_end_view"-->
                    <!--/>-->
            <!--</LinearLayout>-->
            <LinearLayout
                android:id="@+id/my_fabu"
                android:background="#fff"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的发布"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2">
            </View>
            <LinearLayout
                android:id="@+id/my_dianping"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的点评"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2">
            </View>
            <LinearLayout
                android:id="@+id/my_collect"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_fankui"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的反馈"/>
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/my_mark"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/x2"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2">
            </View>
            <LinearLayout
                android:id="@+id/my_code"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的优惠码"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2">
            </View>
            <LinearLayout
                android:layout_marginBottom="15dp"
                android:id="@+id/my_shangjia"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我是商家"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2">
            </View>
            <LinearLayout
                android:id="@+id/my_download"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的下载"/>
                <TextView
                    android:textColor="#ff5e5e"
                    android:id="@+id/my_downloadtask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>
