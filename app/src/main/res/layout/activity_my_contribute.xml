<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:background="@color/fragment_bg"
              tools:context="com.example.administrator.vegetarians824.homePage.personalProfile.MyContribute">
    <include layout="@layout/layout_common_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_large"
        >
        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@color/Grey_500"
            android:layout_marginEnd="@dimen/margin_end_view"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inspire_dongdong"
            android:textSize="@dimen/text_middle"
            />
        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@color/Grey_500"
            android:layout_marginStart="@dimen/margin_end_view"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/contribute_toApp"
        android:layout_width="250dp"
        android:layout_height="@dimen/button_height_tall"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@drawable/contribute_item_checked"
        android:clickable="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赏APP"
            android:textSize="@dimen/text_title_01"
            android:textColor="@color/Grey_700"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期待更多精彩"
            android:layout_marginTop="@dimen/spacing_tiny"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/contribute_toTeam"
        android:layout_width="250dp"
        android:layout_height="@dimen/button_height_tall"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@drawable/contribute_item_normal"
        android:clickable="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赞助团队"
            android:textSize="@dimen/text_title_01"
            android:textColor="@color/Grey_700"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期待更多努力"
            android:layout_marginTop="@dimen/spacing_tiny"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/contribute_toVegetarianism"
        android:layout_width="250dp"
        android:layout_height="@dimen/button_height_tall"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@drawable/contribute_item_normal"
        android:clickable="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推广素食"
            android:textSize="@dimen/text_title_01"
            android:textColor="@color/Grey_700"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请更多人吃素"
            android:layout_marginTop="@dimen/spacing_tiny"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_contribute_confirm"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_super"
        android:background="@drawable/contribute_item_checked"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="【测试】28人共计捐助396元"
        />
</LinearLayout>
