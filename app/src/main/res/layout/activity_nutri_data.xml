<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".dongdong.JKyuansu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00aff0"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/backArea"
            android:layout_marginLeft="5dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_white" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/nutri_data"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/protein"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="蛋白质"
            android:textSize="14sp"
            android:gravity="center"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2">
    </View>

    <RelativeLayout
        android:id="@+id/carbohydrate"
        android:clickable="true"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="碳水化合物"
            android:gravity="center"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2">
    </View>

    <RelativeLayout
        android:id="@+id/shanShiXianWei"
        android:clickable="true"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="膳食纤维"
            android:gravity="center"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2">
    </View>

    <RelativeLayout
        android:id="@+id/zhiLei"
        android:clickable="true"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="脂类"
            android:gravity="center"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2">
    </View>

    <RelativeLayout
        android:id="@+id/weiShengSu"
        android:clickable="true"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="维生素"
            android:gravity="center"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2">
    </View>

    <RelativeLayout
        android:id="@+id/kuangWuZhi"
        android:clickable="true"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="矿物质"
            android:gravity="center"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2">
    </View>

    <RelativeLayout
        android:id="@+id/water"
        android:clickable="true"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="水"
            android:gravity="center"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2">
    </View>
    <Button
        android:id="@+id/btn_nutuiData"
        android:text="营养素摄入量查询"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_bg"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
